@model IEnumerable<InformationDetails.Models.CustomerDetali>

@{
    ViewBag.Title = "GetDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["Name"] == null)
    {
        Response.Redirect("~/UserLogin/Login");
    }
}

<h2>GetDetails</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <input type="button" class="btn btn-info" value="Login" onclick="location.href='@Url.Action("Login", "UserLogin")'" />
    <input type="button" class="btn btn-info" value="Logout" onclick="location.href='@Url.Action("Logout", "UserLogin")'" />
    @*@Html.ActionLink("Login", "Login")*@
</p>
<p>
    @using (@Html.BeginForm("GetDetails", "Home", FormMethod.Get))
    {
        <b> Search By:</b>

        @Html.RadioButton("searchBy", "City") <text>

            City</text>
        @Html.RadioButton("searchBy", "Phone", true) <text>
            Phone</text>
        @Html.RadioButton("searchBy", "CustomerName", true) <text>
            CustomerName</text>

        @Html.TextBox("search")<input type="submit" name="submit" value="search" />
        

    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.images)
        </th>
        <th>
            Action
        </th>

        <th></th>
    </tr>
    @if (Model == null)
    {
        return;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.images)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })|
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
